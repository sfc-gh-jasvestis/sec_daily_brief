FROM n8nio/n8n:latest

# n8n 2.x uses a minimal distroless image - no package manager available
# The base image already includes everything needed for n8n operation

# Expose n8n port
EXPOSE 5678

# Health check using n8n's built-in healthz endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:5678/healthz || exit 1

# Use the default n8n entrypoint and command
